@model mvc_entity.ViewModels.EditorAuthorViewModel

<div class="form-group">
    @Html.LabelFor(model => model.Nome)
    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do autor" } })
</div>

<div class="form-group">
    @Html.Label( "Books")
        @Html.DropDownListFor(model => model.SelectedBookId, new SelectList(Model.LivrosOpcoes, "Id", "Nome"), "- Please Select -")
        @Html.ValidationMessageFor(model => model.SelectedBookId)
</div>